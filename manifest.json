{
  "manifest_version": 2,

  "name": "Reminder",
  "description": "This extension opens bat signal abd ask people to update Trello.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.jpg"
  },
  "background": {
    "scripts": ["popup.js"]
  },
  "permissions": [
    "http://babylon-batsignal.meteor.com/",
    "tabs",
    "alarms",
    "activeTab"
  ]
}
